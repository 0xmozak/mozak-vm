{
  "name": "wasm-demo",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@bjorn3/browser_wasi_shim": "^0.2.19",
    "http-server": "^14.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wasm-pack": "^0.12.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@types/node": "^20.11.15"
  },
  "scripts": {
    "preprepare": "mkdir -p ./dist",
    "prepare": "wasm-pack build --target web && cargo build --target wasm32-wasi && webpack",
    "postprepare": "cp ../target/wasm32-wasi/debug/demo.wasm ./dist/demo.wasm",
    "start": "http-server -p 3000 -c-1 .",
    "test": "wasmtime ./dist/demo.wasm && playwright test"
  }
}
